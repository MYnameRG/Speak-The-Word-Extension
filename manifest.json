{
    "manifest_version": 2,
    "name": "SpeakIt",
    "version": "1.0",
    "description": "Speak the selected text!!",
    "icons": {
        "128": "icon128x128.png",
        "48": "icon48x48.png",
        "16": "icon16x16.png"
    },
    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },
    "permissions": [
        "contextMenus",
        "tts"
    ]
}